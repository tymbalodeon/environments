# alias docs

set working-directory := ".."

# View help text
@help *args:
    ./scripts/documentation/help.nu {{ args }}

# Open a pre-configured development environment
@dev *args: open
    ./scripts/documentation/dev.nu {{ args }}

# Serve documentation files and recompile on changes
@serve *args: open
    ./scripts/documentation/serve.nu {{ args }}

[private]
open:
    open http://localhost:3000/
