set working-directory := "../.."

# View help text
@help *args:
    .environments/c/scripts/help.nu {{ args }}

# Remove compiled files
@clean *args:
    .environments/c/scripts/clean.nu {{ args }}

# Compile
@compile *args:
    .environments/c/scripts/compile.nu {{ args }}

# Format c files
@format *args:
    .environments/c/scripts/format.nu {{ args }}

alias fmt := format

# Lint c files
@lint *args:
    .environments/c/scripts/lint.nu {{ args }}

# Run
@run *args:
    .environments/c/scripts/run.nu {{ args }}
