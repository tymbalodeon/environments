set working-directory := "../.."

# View help text
@help *args:
    .environments/c/scripts/help.nu {{ args }}

# Remove compiled files
@clean *args:
    .environments/c/scripts/clean.nu {{ args }}

# Compile
@compile *args:
    .environments/c/scripts/compile.nu {{ args }}

# Run
@run *args:
    .environments/c/scripts/run.nu {{ args }}
